<div id="toast-<%= @type %>" data-controller="components--flash" class="flex items-center w-full max-w-xs p-4 mb-4 text-gray-500 bg-white rounded-lg shadow dark:text-gray-400 dark:bg-gray-800" role="alert">
  <div class="inline-flex items-center justify-center flex-shrink-0 w-8 h-8 text-<%= color %>-500 bg-<%= color %>-100 rounded-lg dark:bg-<%= color %>-800 dark:text-<%= color %>-200">
      <%= show_icon("#{@type}.svg") %>
      <span class="sr-only">Check icon</span>
  </div>
  <div class="ms-3 text-sm font-normal"> <%= @message %></div>
  <button type="button" class="ms-auto -mx-1.5 -my-1.5 bg-white text-gray-400 hover:text-gray-900 rounded-lg focus:ring-2 focus:ring-gray-300 p-1.5 hover:bg-gray-100 inline-flex items-center justify-center h-8 w-8 dark:text-gray-500 dark:hover:text-white dark:bg-gray-800 dark:hover:bg-gray-700" data-dismiss-target="#toast-<%= @type %>" aria-label="Close">
      <span class="sr-only">Close</span>
      <%= show_icon('close.svg') %>
  </button>
</div>
